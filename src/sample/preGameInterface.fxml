            <Font size="18.0" />
         </font>
      </Button>
      <Button onMouseClicked="#hardDifficulty" layoutX="414.0" layoutY="194.0"
              mnemonicParsing="false" prefHeight="50.0" prefWidth="110.0" text="Hard">
